<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_invoice_magento_form" model="ir.ui.view">
        <field name="name">account.move.magento.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="connector_ecommerce.view_move_form" />
        <field name="arch" type="xml">
            <page name="connector" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <page name="connector" position="inside">
                <group string="Magento Bindings">
                    <field name="magento_bind_ids" nolabel="1" />
                </group>
            </page>
        </field>
    </record>
    <record id="view_magento_account_move_form" model="ir.ui.view">
        <field name="name">magento.account.move.form</field>
        <field name="model">magento.account.move</field>
        <field name="arch" type="xml">
            <form string="Magento Invoice" create="false" delete="false">
                <group>
                    <field name="backend_id" />
                    <field name="external_id" />
                </group>
            </form>
        </field>
    </record>
    <record id="view_magento_account_move_tree" model="ir.ui.view">
        <field name="name">magento.account.move.tree</field>
        <field name="model">magento.account.move</field>
        <field name="arch" type="xml">
            <tree string="Magento Invoice" create="false" delete="false">
                <field name="backend_id" />
                <field name="external_id" />
            </tree>
        </field>
    </record>
</odoo>
