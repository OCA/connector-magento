<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_order_line_form2_test" model="ir.ui.view">
            <field name="name">sale.order.line.form2.test</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <group>
                        <field name='bundle_parent_id'/>
                    </group>
                    <group string="Magento Bindings">
                        <field name="magento_bind_ids" nolabel="1"></field>
                    </group>
                </xpath>
            </field>
        </record>
        
        <record id="view_order_form_test" model="ir.ui.view">
            <field name="name">sale.order.form.test</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="id" invisible="1" />
                    <field name="is_bundle_item" attrs="{'readonly': [('id', '!=', False)], 'invisible': [('id', '!=', False),('is_bundle_item', '=', False)]}" />
                </xpath>
                <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
                    <field name="id" invisible="1" />
                    <field name="is_bundle_item" attrs="{'readonly': [('id', '!=', False)], 'invisible': [('id', '!=', False),('bundle_parent_id', '=', False)]}" />
                    <field name="bundle_parent_id" readonly="1"  attrs="{'invisible': [('bundle_parent_id', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
