<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_product_category_form" model="ir.ui.view">
			<field name="name">product.category.form.magento</field>
			<field name="model">product.category</field>
			<field name="inherit_id" ref="magentoerpconnect.view_product_category_form" />
			<field name="arch" type="xml" >
				<field name="magento_bind_ids" position="after">
					<newline/>
					<button name="export_record" 
						type="object"
						class="oe_highlight"
						string="Export in background" />
				</field>
			</field>
		</record>

		<record id="view_magento_product_category_form" model="ir.ui.view">
			<field name="name">magento.product.category.form</field>
			<field name="model">magento.product.category</field>
			<field name="inherit_id" ref="magentoerpconnect.view_magento_product_category_form" />
			<field name="arch" type="xml" >
				<field name="magento_id" position="replace">
					<field name="is_active" />
					<field name="include_in_menu" />
				</field>
			</field>
		</record>

		<record id="product_normal_form_view" model="ir.ui.view">
			<field name="name">product.product.form.magento</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="magentoerpconnect.product_normal_form_view" />
			<field name="arch" type="xml" >
				<field name="magento_bind_ids" position="after">
					<newline/>
					<button name="export_record" 
						type="object"
						class="oe_highlight"
						string="Export in background" />
				</field>
			</field>
		</record>
	</data>
</openerp>